@model Ogrenci
@{
    ViewData["Title"] = "AddStudent";
}

<h1>Add Student</h1>

<form asp-action="AddStudent" asp-controller="Student" method="post">
    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input id="Ad" name="Ad" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Soyad</label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Numara" class="form-label"></label>
        <input asp-for="Numara" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Bolum" class="form-label"></label>
        <input asp-for="Bolum" class="form-control" />
    </div>
    <input type="submit" value="Kaydet" class="btn btn-primary" />
</form>

