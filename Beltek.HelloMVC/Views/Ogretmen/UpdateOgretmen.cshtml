@model Ogretmen
@{
    ViewData["Title"] = "UpdateOgretmen";
}

<h1>Update Ogretmen</h1>

<form asp-action="UpdateOgretmen" asp-controller="Ogretmen" method="post">
    <div class="mb-3">
        <label asp-for="Tckimlik" class="form-label"></label>
        <input asp-for="Tckimlik" class="form-control" readonly onclick="showReadOnlyMessage() " />
    </div>
    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Soyad" class="form-label"></label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Alan" class="form-label"></label>
        <input asp-for="Alan" class="form-control" />
    </div>
    <input type="submit" value="guncelle" class="btn btn-primary" />
</form>


<script>
    function showReadOnlyMessage() {
        alert("Bu alan değiştirilemez!");
    }
</script>

