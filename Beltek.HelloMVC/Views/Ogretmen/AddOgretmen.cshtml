@model Ogretmen
@{
    ViewData["Title"] = "AddOgretmen";
}
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}

<h1>Add Ogretmen</h1>

<form asp-action="AddOgretmen" asp-controller="Ogretmen" method="post" >
    <div class="mb-3">
        <label asp-for="Tckimlik" class="form-label"></label>
        <input asp-for="Tckimlik" class="form-control"  />
    </div>
    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Soyad" class="form-label"></label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Alan" class="form-label"></label>
        <input asp-for="Alan" class="form-control" />
    </div>
    <input type="submit" value="Kaydet" class="btn btn-primary" />
</form>


