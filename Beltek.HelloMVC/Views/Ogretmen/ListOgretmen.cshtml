@model IEnumerable<Ogretmen>
@{
    ViewData["Title"] = "ListOgretmen";
}

<a asp-action="AddOgretmen" asp-controller="Ogretmen" class="btn btn-success">Öğretmen Ekle</a>
<h1>ListOgretmen</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tc No</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Alan</th> 
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogrt in Model)
        {
            <tr>
                <td>@ogrt.Tckimlik</td>
                <td>@ogrt.Ad</td>
                <td>@ogrt.Soyad</td>
                <td>@ogrt.Alan</td>

                <td><a asp-action="UpdateOgretmen" asp-controller="Ogretmen" asp-route-id="@ogrt.Tckimlik" class="btn btn-sm btn-primary">Düzenle</a> <a asp-action="DeleteOgretmen" asp-controller="Ogretmen" asp-route-id="@ogrt.Tckimlik" class="btn btn-sm btn-danger" onclick="return confirm('Emin misiniz?')">Sil</a></td>

            </tr>
        }
    </tbody>
</table>

